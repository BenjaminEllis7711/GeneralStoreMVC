@model IEnumerable<GeneralStoreMVC.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(product => product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(product => product.InventoryCount)
        </th>
        <th>
            @Html.DisplayNameFor(product => product.Price)
        </th>      
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor( productItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor( productItem => item.InventoryCount)
            </td>
            <td>
                @Html.DisplayFor( productItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Change", "Edit", new { id = item.ProductId }) |
                @Html.ActionLink("More Info", "Details", new { id = item.ProductId }) |
                @Html.ActionLink("Remove", "Delete", new { id = item.ProductId })
            </td>
        </tr>
    }
</table>

